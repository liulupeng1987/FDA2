  <div class="container llp-search-box" style="margin-top: 5%;">
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
          <h1 class="text-center">Search Medicines</h1>
        <%= form_tag search_medicines_path, :method => :get do %>
        <div class="input-group" id="search-id" >
          <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="input a medicine name to search">
          <div class="input-group-btn">
            <span class="input-group-btn">
                <button class="btn btn-success" type="submit">
                  <span class="glyphicon glyphicon-search" aria-hidden="true">
                    <span style="margin-left:10px;">Search</span>
                  </button>
            </span>
            </span>

          </div>

        </div>
        <% end %>
      </div>
      </div>
  </div>



<div>
  <% if current_user && current_user.is_admin == true %>
    <%= link_to("New medicine", new_medicine_path, class: "btn btn-primary pull-right") %>
  <% end %>
</div>


<div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Name</td>
        <td>Strength</td>
        <td>Dosage form</td>
        <td>Manufacturer</td>
      </tr>
    </thead>
    <tbody>

      <% i = 1 %>
      <% @medicines.each do |medicine| %>
        <% j = @medicines.current_page %>
        <tr>
          <td><%= i + (j-1) * 5 %></td>

          <td><%= link_to(medicine.name, medicine_path(medicine)) %></td>
          <td><%= medicine.strength %></td>
          <td><%= medicine.dosage_form %></td>
          <td><%= medicine.factoryname %></td>
          <td>
            <% if current_user && current_user.is_admin == true %>
              <%= link_to("Edit", edit_medicine_path(medicine), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", medicine_path(medicine),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
        <% i += 1 %>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @medicines %>
  </div>

</div>
</div>
