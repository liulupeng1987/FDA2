<div class="col-md-4 col-md-offset-4">
    <h2>Edit manufacturer info</h2>

    <hr>
    <%= simple_form_for @manufacturer do |f| %>
      <div class="form-group">
        <%= f.input :name, input_html: {class: "form-control"} %>
        <%= f.input :address, input_html: {class: "form-control"} %>
        <%= f.input :description, input_html: {class: "form-control"} %>
        <%= f.input :contact_person, input_html: {class: "form-control"} %>
        <%= f.input :phone, input_html: {class: "form-control"} %>
        <%= f.input :email, input_html: {class: "form-control"} %>
        <%= f.input :website, input_html: {class: "form-control"} %>

        <% if @product.image.present? %>
          <span>目前商品图</span> <br>
          <%= image_tag(@product.image.thumb.url) %>
        <% end %>

        <div class="group">
          <%= f.input :cardimage, as: :file %>
        </div>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
    <% end %>

</div>
