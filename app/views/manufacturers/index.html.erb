<div class="col-md-12">
  <div class="col-md-6">
        <%= form_tag search_manufacturers_path, :method => :get do %>
        <div class="input-group" id="search-id" >
          <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="input manufacturer info to search">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>

        </div>
        <% end %>
  </div>
  <div class="group">
    <% if current_user && current_user.is_admin == true %>
      <%= link_to("New manufacturer", new_manufacturer_path, class: "btn btn-primary pull-right") %>
    <% end %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Name</td>
        <td>Contact Person</td>
        <td>Phone</td>
        <td>Email</td>
        <td>Website</td>
      </tr>
    </thead>
    <tbody>
      <% @manufacturers.each do |manufacturer| %>
        <tr>
          <td>#</td>
          <td><%= link_to(manufacturer.name, manufacturer_path(manufacturer)) %></td>
          <td><%= manufacturer.contact_person %></td>
          <td><%= manufacturer.phone %></td>
          <td><%= manufacturer.email %></td>
          <td><%= manufacturer.website %></td>
          <td>
              <% if current_user && current_user.is_admin == true %>
              <%= link_to("Edit", edit_manufacturer_path(manufacturer), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", manufacturer_path(manufacturer),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
